{
  "name": "remark-preset-lint-dnb",
  "version": "1.0.5",
  "description": "remark preset used across DNB projects.",
  "license": "MIT",
  "keywords": [
    "remark",
    "remark-preset",
    "preset",
    "recommended"
  ],
  "repository": "https://github.com/davidsneighbour/remark-preset-lint-dnb",
  "bugs": "https://github.com/davidsneighbour/remark-preset-lint-dnb/issues",
  "files": [
    "index.js"
  ],
  "scripts": {
    "commitlint": "commitlint --from=HEAD~1",
    "release": "standard-version --release-as patch -a -t \"v\" && git push --follow-tags origin main",
    "release-next": "standard-version --release-as minor -a -t \"v\" && git push --follow-tags origin main",
    "release-major": "standard-version --release-as major -a -t \"v\" && git push --follow-tags origin main"
  },
  "standard-version": {
    "skip": {
      "changelog": true
    },
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        100
      ],
      "type-enum": [
        0,
        "always",
        [
          "feat",
          "fix",
          "layouts",
          "refactor",
          "test",
          "chore",
          "wip",
          "content"
        ]
      ]
    }
  },
  "devDependencies": {
    "remark-cli": "^9.0.0",
    "remark-preset-lint-styleguide": "^1.0.0",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "husky": "4.3.0",
    "remark-frontmatter": "3.0.0",
    "remark-lint-linebreak-style": "2.0.1",
    "remark-lint-write-good": "1.2.0",
    "remark-preset-lint-consistent": "4.0.0",
    "standard-version": "9.0.0"
  }
}
