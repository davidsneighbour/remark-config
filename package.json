{
  "name": "@dnb-hugo/remark-preset-lint",
  "version": "1.1.0",
  "description": "Remarklint configuration used in dnb-hugo projects.",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "repository": "git+https://github.com/dnb-hugo/remark-preset-lint",
  "bugs": "git+https://github.com/dnb-hugo/remark-preset-lint/issues",
  "homepage": "git+https://github.com/dnb-hugo/remark-preset-lint",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6"
  },
  "dependencies": {
    "remark-preset-lint-styleguide": "1.0.0",
    "remark-preset-lint-consistent": "4.0.0",
    "remark-lint-linebreak-style": "2.0.1",
    "remark-frontmatter": "3.0.0",
    "remark-lint-write-good": "1.2.0",
    "remark-cli": "9.0.0"
  },
  "devDependencies": {
    "standard-version": "9.0.0",
    "@commitlint/cli": "11.0.0",
    "husky": "4.3.0",
    "@dnb-hugo/browserslist-config": "github:dnb-hugo/browserslist-config",
    "@dnb-hugo/commitlint-config": "github:dnb-hugo/commitlint-config",
    "@dnb-hugo/eslint-config": "github:dnb-hugo/commitlint-config",
    "@dnb-hugo/standard-version-config": "github:dnb-hugo/standard-version-config",
    "@dnb-hugo/textlint-config": "github:dnb-hugo/textlint-config"
  },
  "scripts": {
    "commitlint": "commitlint --from=HEAD~1",
    "release": "standard-version --release-as patch -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "release-next": "standard-version --release-as minor -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "release-major": "standard-version --release-as major -a -t \"v\" && ./bin/release-hook-postrelease.sh",
    "textlint": "textlint",
    "textlint-fix": "textlint --fix"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@dnb-hugo/commitlint-config"
    ]
  }
}
